<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/widget_list_item">

    <LinearLayout
        android:id="@+id/widget_event_time"
        android:layout_marginTop="4dp"
        android:paddingTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:paddingLeft="4dp"
        android:paddingStart="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        android:paddingRight="4dp"
        android:paddingEnd="4dp"
        android:layout_marginBottom="4dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="80dp"
        android:orientation="vertical"
        android:background="@color/colorEventDefault">
        <TextView
            android:id="@+id/widget_event_date"
            style="@style/Text.LightTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Today" />
        <TextView
            android:id="@+id/widget_event_start"
            style="@style/Text.LightTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="9:00am -"/>
        <TextView
            android:id="@+id/widget_event_end"
            style="@style/Text.LightSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"
            android:text="2:00pm"/>
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:paddingTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:paddingLeft="4dp"
            android:paddingStart="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:paddingRight="4dp"
            android:paddingEnd="4dp"
            android:layout_marginBottom="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorBackgroundSelected">
            <TextView
                android:id="@+id/widget_event_title"
                style="@style/Text.ListTitle"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="MG2016 Car Show"/>
            <TextView
                android:id="@+id/widget_event_location"
                style="@style/Text.ListSubtitle"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Crowne Plaza"/>
        </LinearLayout>

</LinearLayout>