<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:paddingTop="@dimen/nav_header_vertical_spacing"
    android:paddingLeft="@dimen/nav_header_horizontal_spacing"
    android:paddingStart="@dimen/nav_header_horizontal_spacing"
    android:background="@drawable/background_drawer"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:weightSum="1"
    android:gravity="bottom">

    <ImageView
        android:id="@+id/drawer_logo"
        android:layout_width="@dimen/nav_header_image_width"
        android:layout_height="@dimen/nav_header_image_height"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:layout_weight="0.65"
        android:src="@drawable/ic_mg2016_logo"
        android:contentDescription="@string/content_mg_logo"
        android:scaleType="fitStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/nav_header_text_spacing"
        android:text="@string/drawer_title"
        style="@style/Text.NavTitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:text="@string/drawer_subtitle"
        style="@style/Text.NavSubtitle"/>

</LinearLayout>
