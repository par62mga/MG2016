<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/news_photo"
				android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:scaleType="fitXY"
				android:adjustViewBounds="true"
				android:src="@drawable/maintaining_the_breed"/>
            <TextView
                android:id="@+id/news_title"
				style="@style/Text.DetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
				android:layout_gravity="center"
                android:text="Welcome to MG 2016"/>
			<TextView
                android:id="@+id/news_subtitle"
				style="@style/Text.DetailSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
				android:layout_gravity="center"
                android:text="- Maintaining the Breed"/>
			<TextView
                android:id="@+id/news_date"
				style="@style/Text.DetailSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
				android:layout_gravity="center"
                android:text="June 13-16, 2016"/>
			<TextView
                android:id="@+id/news_content"
				style="@style/Text.DetailBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
				android:layout_gravity="center"
                android:text="Welcome..."/>
        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_share"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
	
</RelativeLayout>




