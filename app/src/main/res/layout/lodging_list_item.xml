<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selectable">

    <ImageView
        android:id="@+id/lodging_thumbnail"
        android:layout_width="@dimen/list_image_width"
        android:layout_height="@dimen/list_image_height"
        android:layout_margin="@dimen/list_default_padding"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/lodging_placeholder"
        android:contentDescription="@string/content_lodging"/>
    <LinearLayout
        android:id="@+id/lodging_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/list_default_padding"
        android:layout_toRightOf="@id/lodging_thumbnail"
        android:layout_toEndOf="@id/lodging_thumbnail"
        android:orientation="vertical">
    <TextView
        android:id="@+id/lodging_title"
        style="@style/Text.ListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_min_padding"/>
    <TextView
        android:id="@+id/lodging_address"
        style="@style/Text.ListSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_min_padding"/>
    <TextView
        android:id="@+id/lodging_phone"
        style="@style/Text.ListSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_min_padding"
        android:autoLink="phone"/>
    </LinearLayout>
    <TextView
        android:id="@+id/lodging_detail"
        style="@style/Text.ListDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/list_default_padding"
        android:layout_below="@id/lodging_info"
        android:maxLines="1"
        android:ellipsize="end"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_line_height"
        android:layout_marginTop="@dimen/list_min_padding"
        android:layout_below="@id/lodging_detail"
        android:background="@color/colorPrimaryDark"/>

</RelativeLayout>